.SUFFIXES:
.SUFFIXES: .f90 .o .mod .out .test

PROGRAMS = maooam maooam_tl maooam_lyapvectors

MODULES = util.mod params.mod inprod_analytic.mod aotensor_def.mod ic_def_ext.mod ic_def.mod integrator.mod stat.mod tensor.mod maooam_tl_ad.mod tl_ad_integrator.mod rk4_tl_ad_integrator.mod icdelta_def.mod lyap_vectors.mod rk4_integrator.mod lyap_stat.mod 
MODULE_OBJECTS = $(MODULES:.mod=.o)


all: $(PROGRAMS)

debug: FCFLAGS = -g -O0 -check all -traceback 

debug: all

%.mod: %.f90
	$(FC) $(LDFLAGS) $(FCFLAGS) -c $<

%.o: %.f90 $(MODULES)
	$(FC) $(LDFLAGS) $(FCFLAGS) -c $<

%: %.o $(MODULE_OBJECTS)
	$(FC) $(LDFLAGS) $(FCFLAGS) $^ -o $@

inprod_analytic.mod: params.mod
aotensor_def.mod: tensor.mod inprod_analytic.mod
integrator.mod: aotensor_def.mod
rk4_integrator.mod: aotensor_def.mod
ic_def.mod: util.mod aotensor_def.mod
ic_def_ext.mod: util.mod aotensor_def.mod
stat.mod: params.mod
maooam_tl_ad.mod: aotensor_def.mod
tl_ad_integrator.mod: maooam_tl_ad.mod
rk4_tl_ad_integrator.mod: maooam_tl_ad.mod
lyap_vectors.mod: params.mod

clean:
	$(RM) *.o *.mod $(PROGRAMS) $(TEST_PROGRAMS) tests/*.out

.PHONY: clean all test %.test
